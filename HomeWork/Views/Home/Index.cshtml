@model HomeWork.Models.FinancialTranscation
@{
    ViewBag.Title = "Home Page";
}

<div class="well">

    <div class="form-horizontal">
        @using (Ajax.BeginForm(new AjaxOptions
        {
            Url = Url.Action("Index"),
            UpdateTargetId = "financialTranscation"
        }))
        {
            <div class="form-group">
                @Html.LabelFor(a => a.Category, new
           {
               @class = "col-sm-2 control-label"
           })
                <div class="col-sm-10">
                    @Html.EnumDropDownListFor(a => a.Category, "請選擇", new
               {
                   @class = "form-control"
               })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Amount, new
           {
               @class = "col-sm-2 control-label"
           })
                <div class="col-sm-10">
                    @Html.TextBoxFor(a => a.Amount, new
               {
                   @class = "form-control",
                   placeholder = Html.DisplayNameFor(a => a.Amount)
               })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(a => a.Date, new
           {
               @class = "col-sm-2 control-label"
           })

                <div class="col-sm-10">
                    @Html.TextBoxFor(a => a.Date, new
               {
                   type = "Date",
                   @class = "form-control",
                   placeholder = Html.DisplayNameFor(a => a.Date)
               })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(a => a.Remark, new
           {
               @class = "col-sm-2 control-label"
           })

                <div class="col-sm-10">

                    @Html.TextAreaFor(a => a.Remark, new
               {
                   @class = "form-control",
                   placeholder = Html.DisplayNameFor(a => a.Remark)
               })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
</div>

<div id="financialTranscation">
    @Html.Action("FinancialTranscation")
</div>

@section Scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}