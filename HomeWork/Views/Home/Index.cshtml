@model HomeWork.Models.FinancialTranscation
@{
    ViewBag.Title = "Home Page";
}

<div class="well">

    <div class="form-horizontal">
        @using (Ajax.BeginForm(new AjaxOptions { Url = Url.Action("Index"), UpdateTargetId = "financialTranscation" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(a => a.Category, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EnumDropDownListFor(a => a.Category, "請選擇", new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Category)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Amount, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(a => a.Amount, new { @class = "form-control", placeholder = Html.DisplayNameFor(a => a.Amount)})
                    @Html.ValidationMessageFor(a => a.Amount)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Date, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(a => a.Date)
                    @Html.ValidationMessageFor(a => a.Date)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Remark, new { @class = "col-sm-2 control-label" }) 
                <div class="col-sm-10">
                    @Html.TextAreaFor(a => a.Remark, new { @class = "form-control", placeholder = Html.DisplayNameFor(a => a.Remark) })
                    @Html.ValidationMessageFor(a => a.Remark)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
</div>

<div id="financialTranscation">
    @Html.Action("FinancialTranscation")
</div>

@section Scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script src="~/Scripts/Date.js"></script>
}