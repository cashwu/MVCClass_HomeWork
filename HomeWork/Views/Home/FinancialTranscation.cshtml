@model HomeWork.Models.ViewModels.FinancialTranscationViewModels

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @foreach (var item in Model.FinancialTranscations)
            {
                <tr>
                    <td>@item.No</td>
                    <td>@item.Category.ToString()</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </table>
    </div>
</div>